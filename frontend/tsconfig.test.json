{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
      "types": ["jest", "node"], // Include Jest types for tests
      "typeRoots": ["./node_modules/@types"], // Ensure type definitions are found
      "jsx": "react", // Ensure JSX is parsed correctly
      "moduleResolution": "node" // Use Node.js module resolution
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/__test__/**/*.ts",
      "src/__test__/**/*.tsx" // Include test files
    ]
  }
  